<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" minHeight="200.0" prefWidth="280.0" spacing="5.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pepper.autobtransfer.controller.Controller">
   <children>
      <Label text="Automated Bluetooth file transfer" />
      <HBox prefWidth="200.0" spacing="5.0">
         <children>
            <Label text="1) Enter device name(found at BT settings)">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox prefWidth="200.0" spacing="5.0">
         <children>
            <TextField fx:id="deviceNameTxtF" promptText="Device name" />
         </children>
      </HBox>
      <HBox prefWidth="200.0" spacing="5.0">
         <children>
            <Label text="2) Send files every:">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox prefWidth="200.0" spacing="5.0">
         <children>
            <Spinner fx:id="spinner" editable="true" prefWidth="60.0" />
            <Label text="Hour" />
         </children>
      </HBox>
      <HBox prefWidth="200.0" spacing="5.0">
         <children>
            <Label text="3) Choose directory to watch ">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox prefWidth="200.0" spacing="5.0">
         <children>
            <Button fx:id="primaryButton1" onAction="#selectFolderToWatch" text="Choose and Connect" />
            <Button mnemonicParsing="false" onAction="#sendNow" text="Send now" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
